/*
  # --- Security & behavior headers for COVIDAccountabilityNow ---

  # Content Security Policy:
  # - allow local assets + Google Fonts
  # - allow external images (thumbnails, etc.)
  # - allow YouTube/Rumble iframes
  # - allow Cloudflare Turnstile
  # - allow ECharts from jsDelivr CDN
  # - allow fetch to this origin (state-links.json)
  # - block plugins (object-src none)
  Content-Security-Policy: default-src 'self'; script-src 'self' 'unsafe-inline' https://cdn.jsdelivr.net https://challenges.cloudflare.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; img-src 'self' data: https:; font-src 'self' https://fonts.gstatic.com; frame-src 'self' https://www.youtube.com https://www.youtube-nocookie.com https://rumble.com https://challenges.cloudflare.com; connect-src 'self'; object-src 'none'; base-uri 'self'; form-action 'self'; upgrade-insecure-requests

  # Don’t leak referrers cross-origin in a strict way, but keep normal behavior on HTTPS.
  Referrer-Policy: no-referrer-when-downgrade

  # Basic hardening
  X-Content-Type-Options: nosniff
  X-Frame-Options: SAMEORIGIN
  X-XSS-Protection: 0

  # Cross-origin policies that won’t break your embeds
  Cross-Origin-Opener-Policy: same-origin
  Cross-Origin-Resource-Policy: same-site

  # Lock down high-risk browser features you don’t use
  Permissions-Policy: geolocation=(), microphone=(), camera=(), payment=()

  # Light caching for static pages (Cloudflare edge will still help)
  Cache-Control: public, max-age=600
