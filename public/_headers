# -------- HTML: always revalidate so deploys show immediately
/*
  Cache-Control: public, max-age=0, must-revalidate

# -------- JSON data: never cache (we fetch with no-store client-side too)
/assets/*.json
  Cache-Control: no-store

# -------- JS & CSS: modest cache with quick background refresh
/assets/*.js
  Cache-Control: public, max-age=86400, stale-while-revalidate=600

/assets/*.css
  Cache-Control: public, max-age=86400, stale-while-revalidate=600

# -------- Images & static media: longer cache; these rarely change
/assets/img/*
  Cache-Control: public, max-age=604800, immutable
