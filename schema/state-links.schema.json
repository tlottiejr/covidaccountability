{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "COVID Accountability â€” Canonical state-links.json",
  "type": "array",
  "minItems": 1,
  "items": {
    "type": "object",
    "additionalProperties": false,
    "required": ["code", "name", "links"],
    "properties": {
      "code": {
        "type": "string",
        "pattern": "^[A-Z]{2}$",
        "description": "Two-letter state/territory code, uppercase"
      },
      "name": {
        "type": "string",
        "minLength": 2
      },
      "links": {
        "type": "array",
        "minItems": 1,
        "items": {
          "type": "object",
          "additionalProperties": false,
          "required": ["board", "url"],
          "properties": {
            "board": { "type": "string", "minLength": 1 },
            "url": {
              "type": "string",
              "format": "uri",
              "pattern": "^https?://",
              "minLength": 10
            },
            "primary": { "type": "boolean" },
            "unavailable": { "type": "boolean" }
          }
        }
      }
    }
  }
}
